{
    ".button": {
        "masksToBounds": true,
        "width": null,
        "height": 50,
        "borderRadius": 8,
        "textColor": "#FFFFFF",
        "textAlignment": "MIDCENTER",
        "padding": 0,
        "minHeight": 0,
        "backgroundColor": "${mainColor}",
        "font": {
            "size": 16,
            "bold": true,
            "italic": false,
            "family": "SFProText",
            "style": "Semibold"
        },
        "flexProps": {
            "positionType": "RELATIVE",
            "alignSelf": "AUTO"
        }
    },
    ".button.warning": {
        "backgroundColor": "#9F6000"
    },
    ".button.error": {
        "backgroundColor": "#D8000C"
    },
    ".button.success": {
        "backgroundColor": "#4F8A10"
    }
}